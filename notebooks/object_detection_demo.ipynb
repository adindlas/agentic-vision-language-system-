# Step 2: Imports
from vision.detector import ObjectDetector
from vision.visualize import draw_boxes
import matplotlib.pyplot as plt
import cv2
import json
import os

# Step 3: Initialize detector
detector = ObjectDetector(model_name="yolov8n.pt")

# Step 4: Define image folder
image_folder = "data/images/"
image_files = [f for f in os.listdir(image_folder) if f.endswith((".jpg", ".png"))]

# Step 5: Process images
for img_file in image_files:
    img_path = os.path.join(image_folder, img_file)
    
    # Detect objects
    detections = detector.detect(img_path, conf_threshold=0.4)
    
    # Draw bounding boxes
    img_with_boxes = draw_boxes(img_path, detections)
    
    # Display image
    plt.figure(figsize=(10,8))
    plt.imshow(img_with_boxes)
    plt.axis("off")
    plt.title(f"Detections for {img_file}")
    plt.show()
    
    # Save JSON scene representation
    json_path = os.path.join(image_folder, img_file.split(".")[0] + "_scene.json")
    with open(json_path, "w") as f:
        json.dump(detections, f, indent=4)
    
    print(f"Processed {img_file} â†’ JSON saved at {json_path}")

